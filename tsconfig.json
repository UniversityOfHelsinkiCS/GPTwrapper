{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2022"],
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true
  }
}

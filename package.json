{
  "name": "gptwrapper",
  "version": "1.0.0",
  "description": "Wrapper to handle OpenAI API calls and access management",
  "main": "src/index.ts",
  "scripts": {
    "start": "docker compose up",
    "prod": "NODE_ENV=production node --loader ts-node/esm src/index.ts",
    "dev": "NODE_ENV=development nodemon --exec node --loader ts-node/esm src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write '*.{ts,json,css,md}'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UniversityOfHelsinkiCS/GPTwrapper.git"
  },
  "author": "Miko Keskim√§ki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UniversityOfHelsinkiCS/GPTwrapper/issues"
  },
  "homepage": "https://github.com/UniversityOfHelsinkiCS/GPTwrapper#readme",
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb-typescript",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "project": "./tsconfig.json"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint",
    "*.{ts,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@babel/preset-typescript": "^7.21.0",
    "@types/eslint": "^8.21.3",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.3",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonc-parser": "^3.2.0",
    "morgan": "^1.10.0",
    "openai": "^3.2.1",
    "pg": "^8.10.0",
    "sequelize": "^6.29.3",
    "umzug": "^3.2.1",
    "unfuck-utf8-headers-middleware": "^1.0.1",
    "winston": "^3.8.2"
  }
}
